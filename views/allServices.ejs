<!DOCTYPE html>
<html>
  <head>
    <title>Admin dashboard</title>
    <link href="css/style.css" rel="stylesheet" />
    <style>
      * {
        margin: 0;
        padding: 0;
      }
      body {
        background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url("/img/carousel-2.jpg");
        background-repeat: no-repeat;
        background-size: cover;
        object-position: center;
        height: 100vh;
        overflow: hidden;
      }
      .dashboard {
        backdrop-filter: blur(16px) saturate(180%);
        -webkit-backdrop-filter: blur(16px) saturate(180%);
        background-color: rgba(255, 255, 255, 0.75);
        border-radius: 12px;
        border: 1px solid rgba(209, 213, 219, 0.3);
        width: 90vw;
        height: 100vh;
        overflow: auto;
        padding: 4%;
        margin: 2% auto;
      }
      .dashboard::-webkit-scrollbar {
        display: none;
      }
      .title-container {
        display: flex;
        align-items: center;
        justify-content: space-between;
      }
      .count-card {
        backdrop-filter: blur(16px) saturate(180%);
        -webkit-backdrop-filter: blur(16px) saturate(180%);
        background-color: #ffc600;
        border-radius: 12px;
        border: 1px solid rgba(209, 213, 219, 0.3);
        max-width: 200px;
        color: #000;
        font-size: 20px;
      }
      .card {
        backdrop-filter: blur(16px) saturate(180%);
        -webkit-backdrop-filter: blur(16px) saturate(180%);
        background-color: rgba(155, 155, 155, 0.75);
        border-radius: 12px;
        border: 1px solid rgba(209, 213, 219, 0.3);
        padding: 2%;
        color: #000;
      }
    </style>
  </head>
  <body>
    <div class="dashboard">
      <div class="title-container">
        <h1>Dashboard</h1>
        <a class="btn btn-primary" href="/signout">Logout</a>
      </div>
      <div class="serive-count-container my-2 row">
        <% servicesCount.forEach(function(service) { %>
        <div class="count-card p-3 m-2">
          <p><%= service._id %> services count %></p>
          <p><%= service.count %></p>
        </div>
        <% }); %>
      </div>

      <div class="serive-container row my-3">
        <% services.forEach(function(service) { %>
        <div class="col-lg-4">
          <div class="card m-2">
            <h2><%= service.name %></h2>
            <p>Email: <%= service.email %></p>
            <p>BookID:<%= service._id %></p>
            <p>Phone Number: <%= service.phoneNumber %></p>
            <p>Address: <%= service.address %></p>
            <p>Booked Date: <%= service.date.toLocaleString() %></p>
            <p>Booked Price: <%= service.price %></p>
            <p>Service Type: <%= service.type %></p>
          </div>
        </div>
        <% }); %>
      </div>

      <% if(services.length==0){ %>
      <p>There is no services booked</p>
      <% } %>
    </div>
  </body>
</html>
